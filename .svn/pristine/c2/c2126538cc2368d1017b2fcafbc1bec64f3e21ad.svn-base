/* 公共样式 */

/* 1.样式重置 */
html,body,ul,li,img,a,p,div,form,input{
	padding: 0;
	margin: 0;
	/* 设置盒模型 */
	box-sizing: border-box;/*设置的盒子的宽度width会包含padding,margin,border*/
	/*去除移动端特有的点击高亮效果*/
	-webkit-tap-highlight-color:transparent;
}
/* 去除边框焦点*/
input{outline: none;}
html{font-size: 100px;}
li{list-style: none;}
.s{border: 1px #000000 solid;}

/* 1.搜索块样式 */
.navbar-header>button{
	float: left; 
	left: 0.1rem;
	border: none;
}
.navbar-header{background-color: #AC2925;}
.jd_searchBox {
	width: 100%;
	height: 100%;
	padding-left: 0.60rem;
	padding-right: 0.50rem;
	
	
}
.jd_searchBox>input {
	width: 100%;
	height: 0.25rem;
	margin-top: 0.06rem;
	border-radius: 0.15rem;
	padding-left: 0.55rem;
	color: #666; 
	
}
.jd_searchBox::before {
	content: "";
	width: 0.22rem;
	height: 0.20rem;
	position: absolute;
	background: url("../img/jd-sprites.png");
	background-size: 2rem 2rem;
	background-position: -0.56rem -1.08rem;
	left: 0.90rem;
	top: 0.08rem;
}
.jd_login {
	width: 0.40rem;
	height: 0.40rem;
	line-height: 0.40rem;
	color: #fff;
	display: block;
	position: absolute;
	top: 0;
	right: 0;
	
}

/* 2.轮播图样式 */
.top-ol{padding-top: 0.07rem;}
.bac{background-color: #AC2925;}
.circular{
	margin-top: 0.4rem;
	/* 设置圆角边框 四个角 */
	border-top-left-radius: 0.1rem;
	border-top-right-radius: 0.1rem;
	border-bottom-left-radius: 0.1rem;
	border-bottom-right-radius: 0.1rem;
}

/* 导航块样式 */
.top-navigation{
	padding-top: 0.1rem;
	height: 1.40rem;
	overflow: hidden;
	clear: both;
}
.clearfix{
	float: left;
	width: 20%;
	margin-top: 5px;
	text-align: center;
}
.clearfix a img {
	width: 40px;

}
.clearfix a p{
	line-height: 25px;
	font-size: 13px;
}
.top-slither{
	overflow: hidden;
	clear: both; 
}
.top-slither li{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-flex-wrap: wrap;
	-ms-flex-wrap: wrap;
	/* flex-wrap属性指 轴线换行 (核心)*/
	flex-wrap: wrap; 
	float: left;
}
.dot-container{
    width: 93%;
    background:transparent;
    position: absolute;
    text-align:center;
    bottom: 2.45rem;
}

.dot-container span{
    background-color:#ddd;
    border-radius: 50%;
    width: 0.045rem;
    height: 0.045rem;
    display: inline-block;
    margin:0 0.02rem;
}

.dot-container span.act{
    background-color:#2196f3;
}
