		<script type="text/javascript">
			
				var min  = 60;
				var time;
				//用户点击获取验证码
				var yzms=null;
				$("body").on("click",".btns",function(){
					let phone=$("input[name='phone']").val();
					let yzm=$("input[name='yzm']").val();
					let re=/^((1[3,5,8][0-9])|(14[5,7])|(17[0,6,7,8])|(19[7]))\d{8}$/;
					if(phone==""||phone==null){
						alert("电话号码不能为空！");
					}else if(!re.test(phone)){
						alert("电话号码格式不正确！");
					}else{
						$.post("/phoneYZ.do",{"phone":phone},function(ret){
							if(ret=="no"){
								clearInterval(time);
							    time = setInterval(fn,1000);
							    let data={
							    		"phone":phone,
							    		"content":"，您正在登录JD,如非本人操作,请忽略本次通知!"
							     }
							    //给用户发送验证码
							     $.post("http://172.168.50.21:8080/yzmInfo.do",data,function(ret){
							    	 //console.log(ret.result.code);
							    	 if(ret.erro!=0){
							    		 yzms=ret.verifyCode;
							    		 alert("发送成功！")
							    	 }else{
							    		 alert("网络异常，发送失败!")
							    	 } 
							    	 
								  })
							}else{
								alert("您输入的手机号还未注册，请先去注册");
							}
						})
						
					    
					}
					
				})
			
			//用户点击登录
			$("body").on("click",".i-login",function(){
				var phone=$("[name=phone]").val();
				var yzm=$("[name=yzm]").val();
				var re=/^((1[3,5,8][0-9])|(14[5,7])|(17[0,6,7,8])|(19[7]))\d{8}$/;
				if(phone==""){
					alert("手机号码不能为空！");
					return false;
				}else if(!re.test(phone)){
					alert("手机号码格式不正确！");
					return false;
				}else if(yzm==""){
					alert("验证码不能为空！");
					return false;
				}else if(yzm!=yzms){
					alert("验证码不正确！");
					return false;
				}
				return true;
			})
			
			function fn (){
				
			    min = --min ;
			    if(min>0){
			        $('.btns').html('（' + min + '秒）重发');
			    }else{
			        min = 60;
			        $('.btns').html('发送验证码');
			    }
			}
		</script>
